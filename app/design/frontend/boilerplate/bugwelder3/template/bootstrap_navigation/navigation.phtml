/**
 * Top menu for store
 *
 * @see Mage_Page_Block_Html_Topmenu
 */
?>
<?php
    $_menu = $this->getHtml('level-top');
    $navbarType = $this->getNavbarType();
    $navbarClasses = "navbar-default";
    switch($navbarType) {
        case ("default"):
        echo "default";
        break;

        case ("fixed_top"):
        $navbarClasses .= " navbar-fixed-top";
        break;

        case ("fixed_bottom"):
        $navbarClasses .= " navbar-fixed-bottom";
        break;

        case ("static_top"):
        $navbarClasses .= " navbar-static-top";
        break;
    }
?>

<?php if ($_menu): ?>
    <div class="container">
        <nav class="navbar <?php echo $navbarClasses ?>" role="navigation">

            <div class="navbar-header">

                <a class="navbar-brand" href="#">
                    <div class="<?php echo $this->getNavbarBrandClass(); ?>"></div>
                </a>

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                    <span class="sr-only"><?php echo $this->__('Toggle Navigation') ?></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="collapse navbar-collapse navbar-main-collapse">
                <?php echo $this->getChildHtml('top.search') ?>
                <ul class="nav navbar-nav">
                    <?php echo $_menu ?>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <?php echo $this->getChildHtml('topAccount') ?>
                </ul>
            </div>
        </nav>
    </div>
<?php endif ?>

